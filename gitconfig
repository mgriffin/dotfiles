[credential]
  helper = /opt/boxen/bin/boxen-git-credential
[core]
  excludesfile = /opt/boxen/config/git/gitignore
[hub]
  protocol = https
[user]
  name = Mike Griffin
  email = mgriffin@github.com
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto
  pager = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[alias]
  ba = branch -a
  st = status
  ci = commit
  co = checkout
  lg = log --graph --pretty=oneline --abbrev-commit --decorate
  lp = log -p
  sh = show --stat
  s = status -s
[push]
	default = simple
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
